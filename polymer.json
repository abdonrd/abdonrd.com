{
  "entrypoint": "index.html",
  "shell": "src/app-shell.html",
  "fragments": [
    "src/pages/page-404.html",
    "src/pages/page-home.html",
    "src/pages/page-jobs.html",
    "src/pages/page-talks.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [{
    "addServiceWorker": true,
    "swPrecacheConfig": "sw-precache-config.js",
    "bundle": true,
    "js": { "minify": true },
    "css": { "minify": true },
    "html": { "minify": true }
  }]
}
